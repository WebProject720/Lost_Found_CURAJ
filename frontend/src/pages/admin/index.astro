---
import StatsDashboard from "../../components/utility/Statsdashboard";
import { Images } from "../../constants.astro";
import AdminLayout from "../../layouts/AdminLayout.astro";
---

<AdminLayout>
  <div
    class="flex flex-col items-center justify-center bg-white text-gray-800 text-center px-4 sm:px-6 lg:px-8"
  >
    <div class="w-full mt-8">
      <StatsDashboard client:only />
      <!-- <h1>Welcome Admin Portal</h1> -->
    </div>
    <div class="flex flex-row py-8 gap-3">
      <a href="/admin/users" class="bg-blue-200 rounded-lg p-6">
        <div>
          <img
            class="size-36 p-4"
            src={Images.usersIcon.src}
            alt="Users Icon"
          />
        </div>
        <hr />
        <div class="p-4">
          <h1 class="text-center text-white font-extrabold text-2xl">
            Users List
          </h1>
        </div>
      </a>
      <a
        href="/admin/complaints"
        class="bg-blue-200 flex justify-center items-center flex-col rounded-lg p-6"
      >
        <div>
          <img
            class="size-36 p-4"
            src={Images.AddReportIcon}
            alt="Users Icon"
          />
        </div>
        <hr class="w-full" />
        <div class="p-4">
          <h1 class="text-center text-white font-extrabold text-2xl">
            Complaints List
          </h1>
        </div>
      </a>
    </div>
  </div>
</AdminLayout>
