---
import Nav from "../components/Nav.astro";
import Sidebar from "../components/Sidebar.astro";
import AlertBox from "../components/utility/AlertBox.astro";
import { Images } from "../constants.astro";

---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Lost & Found - CURAJ</title>
        <link
            rel="shortcut icon"
            href={Images.curaj_logo.src}
            type="image/x-icon"
        />
    </head>
    <body class="bg-gray-100 text-gray-900">
        <AlertBox />
        <div id="container" class="flex flex-col">
            <div class="w-screen" id="header-container">
                <Nav />
            </div>
            <div class="flex flex-row relative">
                <div
                    class="hidden desktop:!hidden flex-row absolute transition-all duration-700 ease-linear phone:z-50 h-full pt-20"
                    id="sidebarBox"
                >
                    <Sidebar class="" />
                </div>
            </div>
        </div>
        <main
            class="bg-white-100 z-10 mt-14 desktop:mt-20 py-7 px-4 sm:px-6 lg:px-8"
        >
            <div
                class="max-w-7xl mx-auto bg-white phone:bg-transparent shadow-lg rounded-xl p-8"
            >
                <div class="text-center">
                    <h1 class="text-4xl font-bold text-blue-900">About Us</h1>
                    <p class="text-lg text-gray-600 mt-2">
                        Lost & Found Portal - Central University of Rajasthan
                    </p>
                </div>

                <div class="mt-10 flex justify-center">
                    Central University Of Rajasthan
                </div>

                <div class="mt-10 text-center px-4 sm:px-12">
                    <p class="text-lg text-gray-700 leading-relaxed">
                        The <strong>Lost & Found Portal</strong> is an initiative
                        by the
                        <span class="text-blue-700 font-semibold"
                            >Central University of Rajasthan</span
                        > to assist students and faculty in reporting and tracking
                        lost belongings. This platform was developed as a <strong
                            >3<sup>rd</sup> Year Project</strong
                        > by the <strong>B.Sc. Computer Science</strong> students.
                    </p>
                </div>

                <div class="mt-6 flex flex-wrap justify-center gap-8 w-full">
                    <!-- Supervisor - Dr. A. B. C. -->
                    <div
                        class="w-full max-w-xs bg-white p-6 rounded-lg shadow-md text-center"
                    >
                        <img
                            src={Images.userIcon}
                            alt="Dr Krishna Kumar Mohebey"
                            class="w-32 h-32 mx-auto rounded-full shadow-md object-cover"
                        />
                        <h3 class="text-xl font-semibold mt-4">
                            [Project Supervisor Name]
                        </h3>
                        <p class="text-gray-600 font-medium">
                            Project Supervisor
                        </p>
                        <p class="text-gray-500 text-sm mt-2">
                            Guided the project and provided valuable insights.
                        </p>
                        <!-- <a href="https://in.linkedin.com/in/dr-k-k-mohbey-78947448" target="_blank" class="mt-3 inline-block text-blue-600 font-semibold">LinkedIn Profile</a> -->
                        <a
                            href="#"
                            target=""
                            class="mt-3 inline-block text-blue-600 font-semibold"
                            >LinkedIn Profile</a
                        >
                    </div>

                    <!-- Ramesh Mali - Backend Developer -->
                    <div
                        class="w-full max-w-xs bg-white p-6 rounded-lg shadow-md text-center"
                    >
                        <img
                            src={Images.userIcon}
                            alt="Ramesh Mali"
                            class="w-32 h-32 aspect-square object-cover mx-auto rounded-full shadow-md"
                        />
                        <h3 class="text-xl font-semibold mt-4">[Name]</h3>
                        <p class="text-gray-600 font-medium">
                            Backend Developer
                        </p>
                        <p class="text-gray-500 text-sm mt-2">
                            Specialized in database management and server-side
                            logic.
                        </p>
                        <!-- <a href="https://in.linkedin.com/in/ramesh-mali-72301a28b" target="_blank" class="mt-3 inline-block text-blue-600 font-semibold">LinkedIn Profile</a> -->
                        <a
                            href="#"
                            target=""
                            class="mt-3 inline-block text-blue-600 font-semibold"
                            >LinkedIn Profile</a
                        >
                    </div>

                    <!-- Shivkant - Frontend Developer -->
                    <div
                        class="w-full max-w-xs bg-white p-6 rounded-lg shadow-md text-center"
                    >
                        <img
                            src={Images.userIcon}
                            alt="Shivkant"
                            class="w-32 h-32 mx-auto rounded-full shadow-md"
                        />
                        <h3 class="text-xl font-semibold mt-4">[Name]</h3>
                        <p class="text-gray-600 font-medium">
                            Frontend Developer
                        </p>
                        <p class="text-gray-500 text-sm mt-2">
                            Focused on UI/UX design and front-end development.
                        </p>
                        <!-- <a href="https://in.linkedin.com/in/mr-shivkant-698922289" target="_blank" class="mt-3 inline-block text-blue-600 font-semibold">LinkedIn Profile</a> -->
                        <a
                            href="#"
                            target=""
                            class="mt-3 inline-block text-blue-600 font-semibold"
                            >LinkedIn Profile</a
                        >
                    </div>
                </div>
            </div>
        </main>
    </body>
    <script>
        import { checkCookies } from "../logic/checkislogged";
        //check for both cookies
        checkCookies();
    </script>
    <style is:global>
        @import url("https://fonts.googleapis.com/css2?family=Cabin:ital,wght@0,400..700;1,400..700&display=swap");
        @import url("https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap");
        html,
        body {
            margin: 0;
            width: 100%;
            height: 100%;
            font-family: "Cabin", "Poppins", "monospace";
        }
    </style>
</html>
