---
import Nav from "../components/Nav.astro";
import Sidebar from "../components/Sidebar.astro";
import { Images } from "../constants.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Lost & Found - CURAJ</title>
    <link
      rel="shortcut icon"
      href={Images.curaj_logo.src}
      type="image/x-icon"
    />
  </head>
  <body class="bg-gray-100 text-gray-900 overflow-x-auto max-w-fit">
    <div id="container" class="flex flex-col">
      <div class="w-screen" id="header-container">
        <Nav />
      </div>
      <div class="flex flex-row relative">
        <div
          class="hidden desktop:!hidden flex-row absolute transition-all duration-700 ease-linear phone:z-50 h-full pt-20"
          id="sidebarBox"
        >
          <Sidebar class="" />
        </div>
      </div>

      <!-- Main Content Section -->
      <main
        class="relative flex items-start justify-center min-h-screen p-8 bg-cover bg-center"
        style="background-image: url('https://images.shiksha.com/mediadata/images/1531476753php2ZzHlq.jpeg');"
      >
        <!-- Overlay for Blur Effect -->
        <div class="absolute inset-0 bg-black/50 backdrop-blur-md"></div>

        <div
          class="relative flex flex-wrap items-start justify-between w-full max-w-6xl mt-12 p-6 text-white"
        >
          <!-- Left Image Collage -->
          <div
            class="w-full md:w-1/2 p-4 grid-cols-3 gap-2 transform md:-translate-x-16 hidden md:grid"
          >
            <div class="col-span-2 row-span-2">
              <img
                src="https://images.bhaskarassets.com/web2images/521/2023/07/26/14E08AC4-DA06-4D26-BEFE-8BE683DEBC31_1690369921869.jpg"
                alt="Image 1"
                class="w-full rounded-lg shadow-md rotate-6"
              />
            </div>
            <img
              src="https://www.curaj.ac.in/sites/default/files/theuniversity.jpg"
              alt="Image 2"
              class="w-full rounded-lg shadow-md -rotate-6"
            />
            <img
              src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSKLhVzwUbQeG8G4KfBlezb5d_8nDKXt65QSA&s"
              alt="Image 3"
              class="w-full rounded-lg shadow-md rotate-3"
            />
          </div>

          <!-- Right Text Section -->
          <div class="w-full md:w-1/2 p-4 text-center md:text-left">
            <h1 class="text-4xl font-bold">Welcome<br />Lost & Found Portal</h1>
            <h2 class="text-3xl font-bold text-blue-400">CURAJ</h2>
            <p class="mt-4 text-lg">
              A dedicated platform for students and faculty to report lost or
              found items within the campus. Help us reunite items with their
              rightful owners quickly and easily.
            </p>
            <div class="mt-6 flex flex-col md:flex-row md:space-x-4">
              <!-- Login & Register Buttons -->
              <div class="flex space-x-4">
                <button
                  onclick="location.href='/auth'"
                  class="bg-blue-800 hover:bg-blue-900 text-white font-bold py-2 px-6 rounded-lg text-lg"
                  >Login</button
                >
                <button
                  onclick="location.href='/auth/register'"
                  class="bg-green-700 hover:bg-green-800 text-white font-bold py-2 px-6 rounded-lg text-lg"
                  >Register Now</button
                >
                <!-- Know More Button (Visible on both mobile & desktop) -->
                <button
                  onclick="location.href='/about'"
                  class="bg-gray-300 hover:bg-gray-400 text-gray-900 font-bold py-2 px-6 rounded-lg text-lg hidden md:block"
                  >About Us</button
                >
              </div>

              <div class="mt-4 flex justify-center md:hidden">
                <button
                  onclick="location.href='/about'"
                  class="bg-gray-300 hover:bg-gray-400 text-gray-900 font-bold py-2 px-4 rounded-lg text-lg w-32"
                >
                  About Us
                </button>
              </div>
            </div>

            <!-- How It Works and How to Use Sections -->
            <div
              class="mt-10 flex flex-col md:flex-row justify-between text-white"
            >
              <div class="p-4 rounded-lg shadow-md w-full md:w-1/2 mr-2">
                <h3 class="text-xl font-bold">How It Works?</h3>
                <ul class="list-disc pl-5 mt-2">
                  <li>Submit details of your lost item</li>
                  <li>We match lost and found items</li>
                  <li>Claim your item securely</li>
                </ul>
              </div>
              <div class="p-4 rounded-lg shadow-md w-full md:w-1/2 ml-2">
                <h3 class="text-xl font-bold">How to Use?</h3>
                <ul class="list-disc pl-5 mt-2">
                  <li>Sign up and create an account</li>
                  <li>Submit a lost or found report</li>
                  <li>Connect with the rightful owner</li>
                </ul>
              </div>
            </div>
          </div>
        </div>

        <!-- Profile Image -->
        <!-- Profile Image (Hidden in Mobile) -->
        <div
          class="absolute top-6 right-6 hidden sm:flex items-center space-x-2  p-2 rounded-full shadow-md"
        >
          <img
            src="https://www.curaj.ac.in/sites/all/themes/cmf/images/naac1.png"
            alt="Profile"
            class="w-20 h-12 rounded-full"
          />
          <div class="text-white">
            <p class="font-bold">A++ Grade by NAAC</p>
            <p class="text-sm">Category 1st University</p>
          </div>
        </div>
      </main>
    </div>
  </body>

  <style is:global>
    @import url("https://fonts.googleapis.com/css2?family=Cabin:wght@400;700&family=Poppins:wght@100;900&display=swap");
    html,
    body {
      margin: 0;
      width: 100%;
      height: 100%;
      font-family: "Cabin", "Poppins", "monospace";
      overflow-x: hidden;
    }
  </style>
</html>
