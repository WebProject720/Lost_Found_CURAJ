---
import StatsDashboard from "../../components/utility/Statsdashboard";
import DashLayout from "../../layouts/DashLayout.astro";
---

<DashLayout>
    <div
        class="flex flex-col items-center justify-center bg-white text-gray-800 text-center px-4 sm:px-6 lg:px-8"
    >
        <div class="w-full mt-8">
            <StatsDashboard client:only />
        </div>
        <div class="mb-8 text-center">
            <h2 class="text-2xl sm:text-3xl font-semibold text-blue-700">
                Welcome to the Lost & Found Portal
            </h2>
            <p class="text-lg text-gray-600 mt-2">
                Central University of Rajasthan
            </p>
        </div>

        <div class="max-w-7xl w-full bg-fuchsia-100 p-8 shadow-xl rounded-xl">
            <h1 class="text-3xl sm:text-4xl font-bold mb-4 text-blue-900">
                Lost & Found Dashboard
            </h1>
            <p class="text-lg opacity-80">
                Report lost items or check found items. Stay updated with
                real-time tracking.
            </p>
            <!-- Action Button -->
            <div class="mt-7">
                <a
                    href="/dashboard/reports"
                    class="inline-block bg-blue-700 text-white font-semibold px-6 py-3 rounded-lg shadow-md transition duration-300 hover:bg-blue-800"
                >
                    View Lost & Found Complains
                </a>
            </div>
        </div>
    </div>
</DashLayout>
