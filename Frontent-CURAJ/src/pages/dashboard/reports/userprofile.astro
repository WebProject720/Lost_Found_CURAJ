---
import { Profile } from "../../../components/utility/Profiledash";
import DashLayout from "../../../layouts/DashLayout.astro";
---
<DashLayout>
  <div class="flex justify-center pt-10">
    <div class="w-3/5">
      <Profile client:load/>
    </div>
  </div>
  <hr
    class="w-3/5 mx-auto mt-6 h-1 border-0 bg-gradient-to-r from-green-400 via-green-500 to-green-600 shadow-md shadow-gray-400 rounded-full"
  />
  <div class="text-center mt-6">
    <h2 class="text-blue-600 font-bold text-2xl tracking-wide">
      My Reports
    </h2>
  </div>
</DashLayout>
