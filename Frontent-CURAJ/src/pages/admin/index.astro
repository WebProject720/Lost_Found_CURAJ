---
import StatsDashboard from "../../components/utility/Statsdashboard";
import AdminLayout from "../../layouts/AdminLayout.astro";
---

<AdminLayout>
    <div class="flex flex-col items-center bg-gray-50 text-gray-900 min-h-screen py-10 px-4 sm:px-6 lg:px-8">
        <div class="w-full">
            <StatsDashboard client:only />
        </div>

        <div class="text-center mt-10">
            <h2 class="text-3xl sm:text-4xl font-bold text-blue-800">
                Lost & Found Admin Portal
            </h2>
            <p class="text-lg text-gray-600 mt-2">Central University of Rajasthan</p>
        </div>

        <div class="mt-10 max-w-7xl w-full grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
            
            <div class="bg-white p-6 rounded-xl shadow-lg border border-gray-200 text-center transition-all duration-300 hover:shadow-2xl hover:bg-gray-100 hover:-translate-y-2">
                <h3 class="text-2xl font-semibold text-blue-700">Complaints List</h3>
                <p class="text-gray-600 mt-2">View and manage lost item reports.</p>
                <a
                    href="/dashboard/reports"
                    class="mt-4 inline-block bg-blue-700 text-white font-medium px-6 py-3 rounded-lg shadow-md transition duration-300 hover:bg-blue-800"
                >
                    View Complaints
                </a>
            </div>

            <div class="bg-white p-6 rounded-xl shadow-lg border border-gray-200 text-center transition-all duration-300 hover:shadow-2xl hover:bg-gray-100 hover:-translate-y-2">
                <h3 class="text-2xl font-semibold text-blue-700">User List</h3>
                <p class="text-gray-600 mt-2">Manage and track registered users.</p>
                <a
                    href="/dashboard/users"
                    class="mt-4 inline-block bg-green-600 text-white font-medium px-6 py-3 rounded-lg shadow-md transition duration-300 hover:bg-green-700"
                >
                    View Users
                </a>
            </div>

            <div class="bg-white p-6 rounded-xl shadow-lg border border-gray-200 text-center transition-all duration-300 hover:shadow-2xl hover:bg-gray-100 hover:-translate-y-2">
                <h3 class="text-2xl font-semibold text-blue-700">Reports</h3>
                <p class="text-gray-600 mt-2">Check lost and found item reports.</p>
                <a
                    href="/dashboard/reports"
                    class="mt-4 inline-block bg-yellow-600 text-white font-medium px-6 py-3 rounded-lg shadow-md transition duration-300 hover:bg-yellow-700"
                >
                    View Reports
                </a>
            </div>

        </div>
    </div>
</AdminLayout>
