---
import {
  Loader,
  Input,
  Button,
  Button_Link,
  Line,
} from "../../components/utility/Utility";
import AuthLayout from "../../layouts/AuthLayout.astro";
---

<AuthLayout>
  <div>
    <div class="flex flex-nowrap gap-5 flex-col">
      <div class="py-3">
        <h1 class="text-black font-bold text-3xl">
          <center> Login Portal </center>
        </h1>
      </div>
      <Line />
      <form action="" class="flex flex-col gap-5">
        <Input label="Username" placeholder="Username" />
        <Input label="Password" placeholder="Password" />
        <div class="flex w-full justify-center">
          <Button type="submit">Submit</Button>
        </div>
      </form>
      <div class="w-full flex justify-center">
        <Loader> Loading... </Loader>
      </div>
      <Line />
      <div class="w-full flex items-center justify-center">
        <div class="flex flex-row gap-5 flex-wrap justify-evenly w-full">
          <Button_Link to="/auth/register" class="bg-green-500">Register</Button_Link
          >
          <Button_Link class="bg-gray-400 text-black border-0 border-black"
            >Forget Password</Button_Link
          >
        </div>
      </div>
    </div>
  </div>
</AuthLayout>
