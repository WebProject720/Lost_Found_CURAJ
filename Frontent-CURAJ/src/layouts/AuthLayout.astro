---
import { Image } from "astro:assets";
import Header from "../components/Header.astro";
import { Images } from "../constants.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link
      rel="icon"
      type="image/svg+xml"
      href="./src/assets/Logo_of_Central_University_of_Rajasthan (1).gif"
    />
    <meta name="generator" content={Astro.generator} />
    <title>Lost & Found - CURAJ</title>
  </head>
  <body>
    <div class="bg-gray-200 bg-red_color flex flex-col min-h-screen">
      <Header />
      <main class="mt-[200px]">
        <div
          class="w-full h-full flex-col flex flex-wrap justify-between items-center content-center"
        >
          <div
            class="flex flex-col gap-2 bg-gray-100 px-8 py-12 border-[1px] border-black
            rounded-tl-[60px] rounded-br-[60px] min-h-80 w-2/5 phone:w-full"
          >
            <div class="w-full flex content-center justify-center">
              <Image
                src={Images.logo}
                alt="Login Logo"
                class="w-[90px] rounded-xl"
              />
            </div>
            <div class="">
              <slot />
            </div>
          </div>
        </div>
      </main>
    </div>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
